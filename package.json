{
  "name": "druidctl",
  "version": "0.0.1-alpha.0",
  "description": "A CLI for Apache Druid management.",
  "keywords": [
    "apache",
    "druid",
    "apache-druid"
  ],
  "homepage": "https://github.com/Fryuni/druidctl",
  "bugs": "https://github.com/Fryuni/druidctl/issues",
  "repository": "Fryuni/druidctl",
  "license": "MIT",
  "author": "Luiz Ferraz <luiz@lferraz.com>",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "druidctl": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/src",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "shx rm -rf dist && tsc --watch",
    "lint": "prettier -w \"**/*\" --ignore-unknown --check",
    "format": "prettier -w \"**/*\" --ignore-unknown --cache",
    "prepack": "oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "pnpm run lint",
    "version": "oclif readme && git add README.md"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro,json,md,mdx}": "prettier --write"
  },
  "oclif": {
    "bin": "druidctl",
    "commands": "./dist/commands",
    "dirname": "druidctl",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "api": {
        "description": "Send raw requests to the Druid API"
      }
    }
  },
  "dependencies": {
    "@inox-tools/utils": "^0.1.3",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "debug": "^4.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@croct/json": "^2.1.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "mocha": "^10",
    "nock": "14.0.0-beta.8",
    "oclif": "^4",
    "prettier": "^3.3.3",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "engines": {
    "node": ">=18.0.0"
  }
}
